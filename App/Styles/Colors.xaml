<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Cores principais do tema -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#1E1E2D"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#2A2A3C"/>
    <SolidColorBrush x:Key="AccentColor" Color="#6366F1"/>
    
    <!-- Cores de texto -->
    <SolidColorBrush x:Key="TextPrimaryColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TextSecondaryColor" Color="#A3A3B8"/>
    <SolidColorBrush x:Key="TextDisabledColor" Color="#6C6C7D"/>
    
    <!-- Cores de fundo -->
    <SolidColorBrush x:Key="BackgroundColor" Color="#F5F5F9"/>
    <SolidColorBrush x:Key="CardBackgroundColor" Color="#FFFFFF"/>
    
    <!-- Cores da sidebar -->
    <SolidColorBrush x:Key="SidebarBackground" Color="#1E1E2D"/>
    <SolidColorBrush x:Key="SidebarHoverBackground" Color="#2A2A3C"/>
    <SolidColorBrush x:Key="SidebarSelectedBackground" Color="#2C2C40"/>
    <SolidColorBrush x:Key="SidebarForeground" Color="#A3A3B8"/>
    <SolidColorBrush x:Key="SidebarSelectedForeground" Color="#FFFFFF"/>
    
    <!-- Cores de status -->
    <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
    <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
    <SolidColorBrush x:Key="ErrorColor" Color="#EF4444"/>
    <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>
    
    <!-- Cores de borda -->
    <SolidColorBrush x:Key="BorderColor" Color="#E5E7EB"/>
    <SolidColorBrush x:Key="BorderDarkColor" Color="#2A2A3C"/>
    
</ResourceDictionary>
