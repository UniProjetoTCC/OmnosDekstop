<UserControl x:Class="Omnos.Desktop.App.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:Omnos.Desktop.App.Helpers"
             xmlns:converters="clr-namespace:Omnos.Desktop.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400"
             Background="#F5F5F5">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBoolToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <Border Width="350" Background="White" CornerRadius="10" Padding="30" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="315" Opacity="0.1" ShadowDepth="5"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Login" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <TextBlock Text="E-mail" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource LoginInputStyle}"/>

                <TextBlock Text="Senha" FontWeight="SemiBold"/>
                <Grid>
                    <PasswordBox helpers:PasswordBoxHelper.Attach="True"
                                 helpers:PasswordBoxHelper.Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource LoginInputStyle}"
                                 Visibility="{Binding IsPasswordVisible, Converter={StaticResource InvertedBoolToVisibility}}"/>

                    <TextBox Text="{Binding PlainTextPassword, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LoginInputStyle}"
                             Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibility}}"/>

                    <Button Command="{Binding TogglePasswordVisibilityCommand}" 
                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,10,15">
                        <TextBlock Text="ðŸ‘" FontSize="16" Foreground="Gray" ToolTip="Mostrar/Ocultar Senha"/>
                    </Button>
                </Grid>

                <Grid Margin="0,10,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="140"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="1" 
                            Command="{Binding LoginCommand}" 
                            Height="40"
                            FontWeight="SemiBold">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource DefaultButtonStyle}">
                                <Setter Property="Content" Value="Entrar"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsBusy}" Value="True">
                                        <Setter Property="Content" Value="Carregando..."/>
                                        <Setter Property="IsEnabled" Value="False"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Grid>

                <Button Command="{Binding ForgotPasswordCommand}" Content="Esqueci minha senha"
                        HorizontalAlignment="Center" Background="Transparent" BorderThickness="0"
                        Foreground="DodgerBlue" Cursor="Hand" Margin="0,0,0,15"/>

                <TextBlock Text="{Binding ErrorMessage}" Foreground="Red" TextWrapping="Wrap" HorizontalAlignment="Center" MinHeight="30"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibility}}"/>

                <ProgressBar IsIndeterminate="True" Height="4" Margin="0,5,0,0"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>