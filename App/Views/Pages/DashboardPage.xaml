<Page x:Class="Omnos.Desktop.App.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Omnos.Desktop.App.Views"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1100"
      Background="#F5F5F5"
      Title="Dashboard">

    <Grid>
        <Border Background="White"
                CornerRadius="10"
                Padding="24"
                Margin="1,1,1,1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="315" Opacity="0.10" ShadowDepth="5"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Titulo -->
                <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,12">
                    <TextBlock Text="Dashboard"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#333"/>
                    <TextBlock Text="  &#8226;  visão geral"
                               Foreground="#888"
                               Margin="6,3,0,0"/>
                </StackPanel>

                <!-- Conteúdo -->
                <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Conteúdo do Dashboard" 
                               FontSize="18" />
                    <Button Content="Testar Renovação de Token"
                            Command="{Binding RefreshTokenCommand}"
                            Margin="0,20,0,0"
                            Padding="10"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
