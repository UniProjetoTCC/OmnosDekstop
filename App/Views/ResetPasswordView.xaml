<UserControl x:Class="Omnos.Desktop.App.Views.ResetPasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:helpers="clr-namespace:Omnos.Desktop.App.Helpers"
             xmlns:converters="clr-namespace:Omnos.Desktop.App.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400"
             Background="#F5F5F5">

    <UserControl.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:InvertedBooleanToVisibilityConverter x:Key="InvertedBoolToVisibility"/>
    </UserControl.Resources>

    <Grid>
        <Border Width="400"
                Background="White"
                CornerRadius="10"
                Padding="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="315" Opacity="0.1" ShadowDepth="5"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Redefinir Senha" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Margin="0,0,0,20" 
                           HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,15">
                    <TextBlock Text="E-mail: " FontWeight="SemiBold" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding Email}" 
                             FontSize="14"
                             Foreground="#444444"
                             VerticalAlignment="Center"/>
                </StackPanel>

                <TextBlock Text="Nova Senha" FontWeight="SemiBold"/>
                <Grid>
                    <PasswordBox helpers:PasswordBoxHelper.Attach="True"
                                 helpers:PasswordBoxHelper.Password="{Binding NewPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource LoginInputStyle}"
                                 Visibility="{Binding IsPasswordVisible, Converter={StaticResource InvertedBoolToVisibility}}"/>

                    <TextBox Text="{Binding PlainTextPassword, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LoginInputStyle}"
                             Visibility="{Binding IsPasswordVisible, Converter={StaticResource BoolToVisibility}}"/>

                    <Button Command="{Binding TogglePasswordVisibilityCommand}" 
                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,10,15">
                        <TextBlock Text="👁" FontSize="16" Foreground="Gray" ToolTip="Mostrar/Ocultar Senha"/>
                    </Button>
                </Grid>

                <TextBlock Text="Confirmar Nova Senha" FontWeight="SemiBold"/>
                <Grid>
                    <PasswordBox helpers:PasswordBoxHelper.Attach="True"
                                 helpers:PasswordBoxHelper.Password="{Binding ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource LoginInputStyle}"
                                 Visibility="{Binding IsConfirmPasswordVisible, Converter={StaticResource InvertedBoolToVisibility}}"/>

                    <TextBox Text="{Binding PlainTextConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource LoginInputStyle}"
                             Visibility="{Binding IsConfirmPasswordVisible, Converter={StaticResource BoolToVisibility}}"/>

                    <Button Command="{Binding ToggleConfirmPasswordVisibilityCommand}" 
                            HorizontalAlignment="Right" VerticalAlignment="Center" 
                            Background="Transparent" BorderThickness="0" Cursor="Hand" Margin="0,0,10,15">
                        <TextBlock Text="👁" FontSize="16" Foreground="Gray" ToolTip="Mostrar/Ocultar Senha"/>
                    </Button>
                </Grid>

                <Grid Margin="0,20,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="1" 
                            Content="Voltar"
                            Command="{Binding BackCommand}"
                            Style="{StaticResource DefaultButtonStyle}"
                            Padding="20,10"
                            Margin="0,0,10,0"
                            FontSize="14"
                            FontWeight="SemiBold"/>
                    
                    <Button Grid.Column="2" 
                            Content="Redefinir Senha"
                            Command="{Binding ResetPasswordCommand}"
                            Style="{StaticResource DefaultButtonStyle}"
                            Padding="20,10"
                            Margin="10,0,0,0"
                            FontSize="14"
                            FontWeight="SemiBold"/>
                </Grid>

                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="Red" 
                           TextWrapping="Wrap" 
                           HorizontalAlignment="Center" 
                           MinHeight="30"
                           Visibility="{Binding ErrorMessage, Converter={StaticResource BoolToVisibility}}"/>
                
                <TextBlock Text="{Binding SuccessMessage}" 
                           Foreground="Green" 
                           TextWrapping="Wrap" 
                           HorizontalAlignment="Center" 
                           MinHeight="30"
                           Visibility="{Binding SuccessMessage, Converter={StaticResource BoolToVisibility}}"/>

                <ProgressBar IsIndeterminate="True" 
                             Height="4" 
                             Margin="0,5,0,0"
                             Visibility="{Binding IsBusy, Converter={StaticResource BoolToVisibility}}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
